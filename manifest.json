{
  "name": "Two Captions for YouTube",
  "description": "Show captions in two languages on Youtube",
  "version": "1.2.4.1",
  "permissions": [
    "tabs", "http://*/*", "https://*/*", "storage"
  ],
  "browser_action": {
      "default_title": "Show dual captions",
      "default_icon": "icon.png",
      "default_popup": "popup.html"
  },
  "content_scripts": [{
    "all_frames": false,
    "js": [
      "lib/init.js",
      "lib/google-translate-token.js",
      "lib/querystring-encode.js",
      "lib/google-translate-api.js",
      "lib/config/init.js",
      "lib/config/youtube.js",
      "lib/dual-captions.js"
    ],
    "matches": [ "https://www.youtube.com/*" ]
   },{
    "all_frames": false,
    "css": ["lib/config/netflix.css"],
    "js": [
      "lib/init.js",
      "lib/google-translate-token.js",
      "lib/querystring-encode.js",
      "lib/google-translate-api.js",
      "lib/config/init.js",
      "lib/config/netflix.js",
      "lib/dual-captions.js"
    ],
    "matches": [ "https://www.netflix.com/*" ]
   }],
  "icons": {
    "16": "icon.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "manifest_version": 2
}
